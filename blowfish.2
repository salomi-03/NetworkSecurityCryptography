import javax.crypto.Cipher;
import javax.crypto.KeyGenerator;
import javax.crypto.SecretKey;
import java.util.Scanner;

public class BlowFishCipher {
    public static void main(String[] args) throws Exception {

        // Create a key generator based on the Blowfish cipher
        KeyGenerator keyGenerator = KeyGenerator.getInstance("Blowfish");

        // Generate the secret key
        SecretKey secretKey = keyGenerator.generateKey();

        // Create a cipher based on Blowfish
        Cipher cipher = Cipher.getInstance("Blowfish");

        // Get the text to encrypt
        Scanner scanner = new Scanner(System.in);
        System.out.print("Input your message: ");
        String inputText = scanner.nextLine();
        scanner.close();

        // Initialize cipher in ENCRYPT_MODE
        cipher.init(Cipher.ENCRYPT_MODE, secretKey);
        byte[] encrypted = cipher.doFinal(inputText.getBytes());

        // Initialize cipher in DECRYPT_MODE
        cipher.init(Cipher.DECRYPT_MODE, secretKey);
        byte[] decrypted = cipher.doFinal(encrypted);

        // Display results
        System.out.println("Encrypted text (bytes): " + new String(encrypted));
        System.out.println("Decrypted text: " + new String(decrypted));
    }
}
